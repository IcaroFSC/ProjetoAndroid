<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.icaro.myapplication">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ListarPostActivity"
            android:label="@string/title_activity_listar_post"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ConteudoActivity"
            android:label="@string/title_activity_conteudo"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".PostActivity"
            android:label="@string/title_activity_post"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".InserirPost"
            android:label="@string/title_activity_inserir_post"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ListarNoticiaActivity"
            android:label="@string/title_activity_listar_noticia"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".NoticiaActivity"
            android:label="@string/title_activity_noticia"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".NovidadeActivity"
            android:label="@string/title_activity_novidade"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".TesteConexaoActivity"
            android:label="@string/title_activity_teste_conexao"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>