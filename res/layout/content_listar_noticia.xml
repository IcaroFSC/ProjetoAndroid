<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.icaro.myapplication.ListarNoticiaActivity"
    tools:showIn="@layout/activity_listar_noticia">

    <GridLayout
        android:id="@+id/gridLayoutNoticias"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="1"
        android:rowCount="5"
        android:orientation="horizontal"
        android:scrollbars="vertical">

        <TextView
            android:id="@+id/txtTituloNoticia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txtTituloNoticia"
            android:textSize="30sp"/>

        <Spinner
            android:id="@+id/spinnerNoticias"
            style="@style/Base.Widget.AppCompat.Spinner.Underlined"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="30dp"/>

        <ListView
            android:id="@+id/lstNoticiaConsultada"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:dividerHeight="4px"/>

        <TextView
            android:id="@+id/txtNoticias"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txtNoticias"
            android:textSize="30sp"/>

        <ListView
            android:id="@+id/lstNoticias"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:dividerHeight="4px"/>

    </GridLayout>

</android.support.constraint.ConstraintLayout>
