<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.icaro.myapplication.MainActivity">

    <GridLayout
        android:id="@+id/gridLayoutFeed"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rowCount="5">

        <SearchView
            android:id="@+id/barraPesquisa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:queryHint="Assunto a ser pesquisado">

        </SearchView>

        <Button
            android:id="@+id/btnPost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:height="140sp"
            android:text="Post" />

        <Button
            android:id="@+id/btnNoticia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="2"
            android:height="140sp"
            android:text="NotÃ­cias" />

        <Button
            android:id="@+id/btnTutorial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="3"
            android:height="140sp"
            android:text="Novidades" />

    </GridLayout>

</android.support.constraint.ConstraintLayout>
